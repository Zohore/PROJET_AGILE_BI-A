                                                                <tr>
                                                                    <th>#</th>
                                                                    <th>Code</th>
                                                                    <th>Date</th>
                                                                    <th>Consultant</th>
                                                                    <th>Client</th>
                                                                    <th>Nbjrs</th>
                                                                    <th>Nbjrsr</th>
                                                                    <th>N° Contrat</th>
                                                                    <th>Application</th>
                                                                    <th>Avenant</th>
                                                                    <th>Actions</th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>
                                                                {% for bcclient in mission.bcclients %}
                                                                    <tr>
                                                                        <td>
                                                                            <a href="{{ path('bcclient_show', { 'id': bcclient.id }) }}">{{ bcclient.id }}</a>
                                                                        </td>
                                                                        <td>{{ bcclient.code }}</td>
                                                                        <td>{% if bcclient.date %}{{ bcclient.date|date('Y-m-d') }}{% endif %}</td>
                                                                        <td>{{ bcclient.consultant }}</td>
                                                                        <td>{{ bcclient.client }}</td>
                                                                        <td>{{ bcclient.nbJrs }}</td>
                                                                        <td>{{ bcclient.nbJrsR }}</td>
                                                                        <td>{{ bcclient.ncontrat }}</td>
                                                                        <td>{{ bcclient.application }}</td>
                                                                        <td>{{ bcclient.avenant }}</td>
                                                                        <td class="center">
                                                                            <a href="{{ path('bcclient_show', { 'id': bcclient.id }) }}"><i
                                                                                        class="icon-menu fa fa-search-plus blue bigger-140"></i></a>

                                                                            <a href="{{ path('bcclient_edit', { 'id': bcclient.id }) }}"><i
                                                                                        class="icon-menu fa fa-edit orange bigger-140"></i></a>
                                                                        </td>
                                                                    </tr>
                                                                {% endfor %}
                                                                </tbody>
                                                            </table>

                                                        {% endif %}
                                                    </div>

                                                    <div id="task-tab" class="tab-pane">
                                                        <h4 class="smaller lighter green">
                                                            <i class="ace-icon fa fa-list"></i>
                                                            Liste des factures
                                                        </h4>
                                                        {% if mission.factures | length == 0 %}
                                                            <div class="alert alert-info">
                                                                Pas de factures pour cette mission.

                                                            </div>
                                                        {% else %}
                                                            <table id="dynamic-table"
                                                                   class="table table-striped table-bordered table-hover dataTable no-footer text-left"
                                                                   role="grid" aria-describedby="dynamic-table_info">
                                                                <thead style="font-weight: bold;">
                                                                <tr role="row">
                                                                    <th class="sorting" tabindex="0"
                                                                        aria-controls="dynamic-table" rowspan="1"
                                                                        colspan="1" style="color: #707070;"
                                                                        aria-label="Domain: activate to sort column ascending">
                                                                        Numéro
                                                                    </th>
                                                                    <th class="sorting" tabindex="0"
                                                                        aria-controls="dynamic-table" rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Domain: activate to sort column ascending">
                                                                        Client
                                                                    </th>
                                                                    <th class="sorting_desc" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1" colspan="1"
                                                                        aria-label="Price: activate to sort column ascending"
                                                                        aria-sort="descending">
                                                                        consultant
                                                                    </th>
                                                                    <th class="sorting_desc" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1" colspan="1"
                                                                        aria-label="Price: activate to sort column ascending"
                                                                        aria-sort="descending">
                                                                        mois
                                                                    </th>


                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        date
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        Total Ht
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        Total TTC
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        Etat
                                                                    </th>


                                                                    <th class="sorting_disabled" rowspan="1" colspan="1"
                                                                        aria-label=""></th>

                                                                </tr>
                                                                </thead>

                                                                <tbody>
                                                                {% for facture in mission.factures %}

                                                                    <tr role="row" class="odd">
                                                                        <td>


                                                                            {{ facture.numero }}


                                                                        </td>


                                                                        <td>
                                                                            {% if facture.client is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ facture.client.nom }}


                                                                            {% endif %}
                                                                        </td>
                                                                        <td>

                                                                            {% if facture.consultant is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ facture.consultant }}


                                                                            {% endif %}


                                                                        </td>


                                                                        <td>
                                                                            {% if facture.mois is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ facture.mois }}-{{ facture.year }}



                                                                            {% endif %}

                                                                        </td>

                                                                        <td class="hidden-480">
                                                                            {% if facture.date is null %}
                                                                                --
                                                                            {% else %}
                                                                                {{ facture.date|date('Y-m-d') }}

                                                                            {% endif %}


                                                                        </td>
                                                                        <td class="hidden-480">
                                                                            {% if facture.totalHT is null %}
                                                                                --
                                                                            {% else %}
                                                                                {{ facture.totalHT }}

                                                                            {% endif %}


                                                                        </td>
                                                                        <td>
                                                                            {% if facture.totalTTC is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ facture.totalTTC }}


                                                                            {% endif %}
                                                                        </td>
                                                                        <td>
                                                                            {% if facture.etat is null %}
                                                                                --

                                                                            {% else %}
                                                                                {% if facture.etat == 'non payé' %}
                                                                                    <span class="label label-warning arrowed arrowed-right"> {{ facture.etat }}</span>
                                                                                {% else %}
                                                                                    <span class="label label-success arrowed arrowed-right"> {{ facture.etat }}</span>
                                                                                {% endif %}



                                                                            {% endif %}
                                                                        </td>


                                                                        <td>
                                                                            <div class="hidden-sm hidden-xs action-buttons">
                                                                                <a class="blue"
                                                                                   href="{{ path('facture_show', { 'id': facture.id }) }}"
                                                                                   title="voir">
                                                                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                                                                </a>

                                                                                <a class="orange"
                                                                                   href="{{ path('facture_edit', { 'id': facture.id }) }}"
                                                                                   title="modifier">
                                                                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                                                </a>


                                                                                <a class="red" href=""
                                                                                   onclick="return confirm('vous êtes sûr que vous voulez le supprimé?');">
                                                                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                                                </a>

                                                                            </div>

                                                                            <div class="hidden-md hidden-lg">
                                                                                <div class="inline pos-rel">
                                                                                    <button class="btn btn-minier btn-yellow dropdown-toggle"
                                                                                            data-toggle="dropdown"
                                                                                            data-position="auto">
                                                                                        <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                                                    </button>

                                                                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                                                        <li>
                                                                                            <a href="#"
                                                                                               class="tooltip-info"
                                                                                               data-rel="tooltip"
                                                                                               title=""
                                                                                               data-original-title="View">
                                                    <span class="blue">
                                                        <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                    </span>
                                                                                            </a>
                                                                                        </li>

                                                                                        <li>
                                                                                            <a href="#"
                                                                                               class="tooltip-success"
                                                                                               data-rel="tooltip"
                                                                                               title=""
                                                                                               data-original-title="Edit">
																				<span class="green">
																					<i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
																				</span>
                                                                                            </a>
                                                                                        </li>

                                                                                        <li>
                                                                                            <a href="#"
                                                                                               class="tooltip-error"
                                                                                               data-rel="tooltip"
                                                                                               title=""
                                                                                               data-original-title="Delete">
																				<span class="red">
																					<i class="ace-icon fa fa-trash-o bigger-120"></i>
																				</span>
                                                                                            </a>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                {% endfor %}

                                                                </tbody>

                                                            </table>
                                                        {% endif %}

                                                    </div>

                                                    <div id="member-tab" class="tab-pane">
                                                        {% if mission.bcfournisseurs | length ==0 %}
                                                            <div class="alert alert-info">
                                                                Pas de Bc Fournisseur pour cette mission
                                                            </div>
                                                        {% else %}
                                                            <table id="dynamic-table"
                                                                   class="table table-striped table-bordered table-hover dataTable no-footer text-center"
                                                                   role="grid" aria-describedby="dynamic-table_info">
                                                                <thead style="font-weight: bold;">
                                                                <tr role="row">
                                                                    <th class="sorting" tabindex="0"
                                                                        aria-controls="dynamic-table" rowspan="1"
                                                                        colspan="1" style="color: #707070;"
                                                                        aria-label="Domain: activate to sort column ascending">
                                                                        Réference
                                                                    </th>
                                                                    <th class="sorting" tabindex="0"
                                                                        aria-controls="dynamic-table" rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Domain: activate to sort column ascending">
                                                                        Fournisseur
                                                                    </th>
                                                                    <th class="sorting_desc" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1" colspan="1"
                                                                        aria-label="Price: activate to sort column ascending"
                                                                        aria-sort="descending">
                                                                        consultant
                                                                    </th>
                                                                    <th class="sorting_desc" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1" colspan="1"
                                                                        aria-label="Price: activate to sort column ascending"
                                                                        aria-sort="descending">
                                                                        date
                                                                    </th>


                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        Mois
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        nb jours
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        Achat HT
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        Achat TTC
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        Etat
                                                                    </th>


                                                                    <th class="sorting_disabled" rowspan="1" colspan="1"
                                                                        aria-label=""></th>

                                                                </tr>
                                                                </thead>

                                                                <tbody>
                                                                {% for bcfournisseur in mission.bcfournisseurs %}

                                                                    <tr role="row" class="odd">


                                                                        <td>


                                                                            #H3K_BC_F_ {{ bcfournisseur.id }}


                                                                        </td>

                                                                        <td>
                                                                            {% if bcfournisseur.fournisseur is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ bcfournisseur.fournisseur }}


                                                                            {% endif %}
                                                                        </td>
                                                                        <td>

                                                                            {% if bcfournisseur.mission is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ bcfournisseur.mission.consultant }}


                                                                            {% endif %}


                                                                        </td>


                                                                        <td class="hidden-480">
                                                                            {% if bcfournisseur.date is null %}
                                                                                --
                                                                            {% else %}
                                                                                {{ bcfournisseur.date|date('Y-m-d') }}

                                                                            {% endif %}


                                                                        </td>
                                                                        <td>
                                                                            {% if bcfournisseur.mois is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ bcfournisseur.mois }}/{{ bcfournisseur.year }}


                                                                            {% endif %}

                                                                        </td>

                                                                        <td class="hidden-480">
                                                                            {% if bcfournisseur.nbjours is null %}
                                                                                --
                                                                            {% else %}
                                                                                {{ bcfournisseur.nbjours }}

                                                                            {% endif %}


                                                                        </td>
                                                                        <td>
                                                                            {% if bcfournisseur.achatHT is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ bcfournisseur.achatHT }}


                                                                            {% endif %}
                                                                        </td>
                                                                        <td>
                                                                            {% if bcfournisseur.achatTTC is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ bcfournisseur.achatTTC }}


                                                                            {% endif %}
                                                                        </td>
                                                                        <td>

                                                                        </td>

                                                                        <td>
                                                                            <div class="hidden-sm hidden-xs action-buttons">
                                                                                <a class="blue"
                                                                                   href="{{ path('bcfournisseur_show', { 'id': bcfournisseur.id }) }}"
                                                                                   title="voir">
