{% extends 'base.html.twig' %}

{% block title %} Hope3k | Mission {% endblock %}{% block menu %}  <a
        href="{{ path('mission_index') }}">Mission</a>   {% endblock %}   {% block menu_active %}    Détails {% endblock %}
{% block content %}


    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->


            <div class="hr dotted"></div>


            <div class="">
                <div id="user-profile-2" class="user-profile">
                    <div class="tabbable">


                        <div class="tab-content no-border padding-24">
                            <div id="home" class="tab-pane active">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-3">


                                        <div class="space space-4"></div>

                                        <a href="{{ path('facture_mission', { 'id': mission.id }) }}"
                                           class="btn btn-block btn-primary btn-white">
                                            <i class="ace-icon fa fa-money bigger-120"></i>
                                            <span class="bigger-110"> Facturer </span>

                                        </a>
                                        <a href="{{ path('mission_edit', { 'id': mission.id }) }}"
                                           class="btn btn-block btn-warning btn-white">
                                            <i class="ace-icon fa fa-edit bigger-120"></i>
                                            <span class="bigger-110"> Modifier </span>

                                        </a>
                                        <a type="button" class="btn btn-block btn-info btn-white"
                                           data-toggle="modal" data-target="#exampleModal">
                                            <i class="fa fa-plus-square"></i> Ajouter Bc client
                                        </a>
                                        <div class="space space-4"></div>
                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                             aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Ajouter un Bc
                                                            client </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    {{ form_start(form) }}

                                                    <div class="modal-body">

                                                        {{ form_widget(form) }}
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Fermer
                                                        </button>
                                                        <button type="submit" class="btn btn-primary">Enregistrer
                                                        </button>
                                                    </div>
                                                    {{ form_end(form) }}

                                                </div>
                                            </div>
                                        </div>

                                        {% if mission.statut != 'Terminée' %}
                                            <a href="{{ path('mission_end', { 'id': mission.id }) }}"
                                               class="btn btn-sm btn-block btn-danger btn-white">
                                                <i class="ace-icon fa fa-close bigger-110"></i>
                                                <span class="bigger-110">Marquer comme terminé</span>
                                            </a>
                                        {% else %}
                                            <a href="{{ path('mission_open', { 'id': mission.id }) }}"
                                               class="btn btn-sm btn-block btn-success btn-white">
                                                <i class="ace-icon fa fa-close bigger-110"></i>
                                                <span class="bigger-110">Réactiver la mission</span>
                                            </a>

                                        {% endif %}
                                    </div><!-- /.col -->

                                    <div class="col-xs-12 col-sm-9">
                                        <h4 class="blue">
                                            <span class="middle">#mission_{{ mission.id }}</span>

                                            <span class="label label-purple">
																	<i class="ace-icon fa fa-circle smaller-80 align-middle"></i>
                                                {{ mission.type }}
																</span>
                                            {% if mission.statut == 'Terminé' %}
                                                <span class="label label-danger pull-right">
																	<i class="ace-icon fa fa-close smaller-80 align-middle"></i>
                                                    {{ mission.statut }}
																</span>
                                            {% else %}

                                                <span class="label label-info pull-right">
																	<i class="ace-icon fa fa-spinner smaller-80 align-middle"></i>
                                                    {{ mission.statut }}
																</span>
                                            {% endif %}
                                        </h4>

                                        <div class="profile-user-info">
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Motif</div>

                                                <div class="profile-info-value">
                                                    <span>
                                                        {% if mission.job is null %}
                                                            --
                                                        {% else %}
                                                            {{ mission.job }}
                                                        {% endif %}
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> BC client</div>

                                                <div class="profile-info-value">
                                                    <span>

                                                    {% if mission.bcclients | length == 0 %}
                                                        --

                                                    {% else %}
                                                        {% for bcclient in mission.bcclients %}
                                                            <a href="{{ path('bcclient_show', { 'id': bcclient.id }) }}">

                                                                {{ bcclient.code }}
                                                            </a>
                                                            ,
                                                        {% endfor %}


                                                    {% endif %}

                                                    </span>
                                                </div>
                                            </div>

                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Prix Achat</div>

                                                <div class="profile-info-value">

                                                    <span>
                                                         {% if mission.prixAchat is null %}
                                                             --
                                                         {% else %}
                                                             {{ mission.prixAchat }}
                                                         {% endif %}
                                                        </span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Prix Vente</div>

                                                <div class="profile-info-value">

                                                    <span> {% if mission.prixVente is null %}
                                                            --
                                                        {% else %}
                                                            {{ mission.prixVente }}
                                                        {% endif %}</span>
                                                </div>
                                            </div>

                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Consultant</div>

                                                <div class="profile-info-value">
                                                    <span>{{ mission.consultant }}</span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Client</div>

                                                <div class="profile-info-value">
                                                    <span>{{ mission.client }}</span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Fournisseur</div>

                                                <div class="profile-info-value">
                                                    <span>{{ mission.fournisseur }}</span>
                                                </div>
                                            </div>


                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Début</div>

                                                <div class="profile-info-value">
                                                    <span>{% if mission.dateDebut %}{{ mission.dateDebut|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Fin</div>

                                                <div class="profile-info-value">
                                                    <span>{% if mission.dateFin %}{{ mission.dateFin|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>

                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Création</div>

                                                <div class="profile-info-value">
                                                    <span>{% if mission.createdAt %}{{ mission.createdAt|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Modification</div>

                                                <div class="profile-info-value">
                                                    <span>{% if mission.updatedAt %}{{ mission.updatedAt|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="hr hr-8 dotted"></div>

                                        <div class="profile-user-info">
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Description</div>

                                                <div class="profile-info-value">
                                                    <p>{{ mission.description }}</p>
                                                </div>
                                            </div>

                                        </div>
                                    </div><!-- /.col -->
                                </div><!-- /.row -->

                                <div class="space-20"></div>

                                <div class="col-sm-10 col-sm-offset-1">
