{% extends 'base.html.twig' %}

{% block title %} Hope3k | Facture Avoir{% endblock %}
{% block menu %}
    <a href="{{ path('facture_index') }}">Factures</a>   {% endblock %}
{% block menu_active %} Avoir {% endblock %}{% block content1 %}



    <div class="col-md-10 col-md-offset-1">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">Facture avoir</h4>
            </div>

            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="row">
                        <div class="col-md-12" style="padding-left: 13px;padding-right: 13px">
                            <br>
                            <table id="dynamic-table"
                                   class="table table-striped table-bordered table-hover dataTable no-footer text-left"
                                   role="grid" aria-describedby="dynamic-table_info">
                                <thead style="font-weight: bold;">
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                        colspan="1" style="color: #707070;"
                                        aria-label="Domain: activate to sort column ascending">
                                        Numéro
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                        colspan="1" style="color: #707070;"
                                        aria-label="Domain: activate to sort column ascending">
                                        Projet
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                        colspan="1"
                                        aria-label="Domain: activate to sort column ascending">
                                        Client
                                    </th>
                                    <th class="sorting_desc" tabindex="0" aria-controls="dynamic-table"
                                        rowspan="1" colspan="1"
                                        aria-label="Price: activate to sort column ascending"
                                        aria-sort="descending">
                                        consultant
                                    </th>
                                    <th class="sorting_desc" tabindex="0" aria-controls="dynamic-table"
                                        rowspan="1" colspan="1"
                                        aria-label="Price: activate to sort column ascending"
                                        aria-sort="descending">
                                        mois
                                    </th>
                                    <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="">Nb jours
                                    </th>

                                    <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                        rowspan="1"
                                        colspan="1" aria-label="Status: activate to sort column ascending">
                                        date
                                    </th>
                                    <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                        rowspan="1"
                                        colspan="1" aria-label="Status: activate to sort column ascending">
                                        Total Ht
                                    </th>
                                    <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                        rowspan="1"
                                        colspan="1" aria-label="Status: activate to sort column ascending">
                                        Total TTC
                                    </th>
                                    <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                        rowspan="1"
                                        colspan="1" aria-label="Status: activate to sort column ascending">
                                        Etat
                                    </th>


                                </tr>
                                </thead>

                                <tbody>


                                <tr role="row" class="odd text-center">
                                    <td>


                                        {{ facture.numero }}


                                    </td>
                                    <td>


                                        {{ facture.projet }}


                                    </td>


                                    <td>
                                        {% if facture.client is null %}
                                            --

                                        {% else %}

                                            {{ facture.client.nom }}


                                        {% endif %}
                                    </td>
                                    <td>

                                        {% if facture.consultant is null %}
                                            --

                                        {% else %}

                                            {{ facture.consultant }}


                                        {% endif %}


                                    </td>


                                    <td>
                                        {% if facture.mois is null %}
                                            --

                                        {% else %}

                                            {{ facture.mois }}-{{ facture.year }}



                                        {% endif %}

                                    </td>
                                    <td>
                                        {% if facture.nbjour is null %}


                                        {% else %}

                                            {{ facture.nbjour }}


                                        {% endif %}
                                    </td>
                                    <td class="hidden-480">
                                        {% if facture.date is null %}
                                            --
                                        {% else %}
                                            {{ facture.date|date('d/m/Y') }}

                                        {% endif %}


                                    </td>
                                    <td class="hidden-480">
                                        {% if facture.totalHT is null %}
                                            --
                                        {% else %}
                                            {{ facture.totalHT }}

                                        {% endif %}


                                    </td>
                                    <td>
                                        {% if facture.totalTTC is null %}
                                            --

                                        {% else %}

                                            {{ facture.totalTTC }}


                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if facture.etat is null %}
                                            --

                                        {% else %}
                                            {% if facture.etat == 'non payé' %}
                                                <span class="label label-warning arrowed arrowed-right"> {{ facture.etat }}</span>
                                            {% else %}
                                                <span class="label label-success arrowed arrowed-right"> {{ facture.etat }}</span>
                                            {% endif %}



                                        {% endif %}
                                    </td>


                                </tr>


                                </tbody>

                            </table>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-8 col-md-offset-2">

                            <hr>
                            <div class="form-group">

                                <label for="vente">Prix Vente</label>
                                <input type="text" value="{{ facture.mission.prixVente }}" disabled id="vente"
                                       class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label for="achat">Prix Achat</label>
                                <input type="text" value="{{ facture.mission.prixAchat }}" disabled id="achat"
                                       class="form-control"/>
                            </div>

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6"> {{ form_row(form.nbjour) }}</div>
                                <div class="col-md-6"> {{ form_row(form.date) }}</div>
                            </div>


                        </div>
                    </div>


                    <div class="form-actions center">
                        <button type="submit" class="btn btn-sm btn-success">
                            Submit
                            <i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
                        </button>
                    </div>
                    {{ form_widget(form._token) }}

                    {{ form_end(form , {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>



{% endblock %}
