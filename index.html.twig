{% extends 'base.html.twig' %}
{% block title %} Hope3k | Mission {% endblock %}

{% block menu %}  <a href="{{ path('mission_index') }}">Mission</a>   {% endblock %}

   {% block menu_active %}    Liste {% endblock %}
{% block content1 %}

    <ul class="list-group text-center">


        {% if( nb_C is not null and nb_C != 0) %}


            <li class="list-group-item">


                <strong>
                    <i class="ace-icon fa fa-warning"></i>
                    {{ nb_C }}
                </strong>
                Missions sans contrat clients,
                <a href="{{ path('mission_sans_contrat_client') }}" class="btn btn-sm btn-danger">
                    <i class="ace-icon fa fa-list bigger-110"></i>
                    <span class="bigger-110 no-text-shadow">Liste</span>
                </a>
            </li>
        {% endif %}


    </ul>


    <div class="col-md-12  widget-container-col ui-sortable" id="widget-container-col-1">

        <div class="widget-box ui-sortable-handle" id="widget-box-1">
            <div class="widget-header">
                <h5 class="widget-title">Liste des Missions :</h5>

                <div class="widget-toolbar">
                    <div class="widget-menu">
                        <a href="#" data-action="settings" data-toggle="dropdown">
                            <i class="ace-icon fa fa-bars"></i>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-right dropdown-light-blue dropdown-caret dropdown-closer">
                            <li>
                                <a data-toggle="tab" href="#dropdown1">Option#1</a>
                            </li>

                            <li>
                                <a data-toggle="tab" href="#dropdown2">Option#2</a>
                            </li>
                        </ul>
                    </div>

                    <a href="#" data-action="fullscreen" class="orange2">
                        <i class="ace-icon fa fa-expand"></i>
                    </a>


                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>

                    <a href="#" data-action="close">
                        <i class="ace-icon fa fa-times"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <a href="{{ path('missions_archived') }}" class="btn btn-block btn-white btn-default ">
                                <i class="ace-icon fa fa-archive"></i> Missions archivées
                            </a></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">

                            <div class="clearfix">
                                <div class="pull-right tableTools-container">
                                </div>
                            </div>
                            <div class="table-header">
                                Missions : <a href="{{ path('mission_new') }}"
                                              class="btn btn-white btn-default pull-right"
                                              style="margin-top: 2px;margin-right: 3px;">
                                    <i class="fa fa-plus"></i>
                                    Nouvelle Mission
                                </a>

                            </div>

                            <!-- div.table-responsive -->

                            <!-- div.dataTables_borderWrap -->
                            <div>
                                <div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline ">
                                    <table id="dynamic-table"
                                           class="table table-striped table-bordered table-hover dataTable no-footer text-left"
                                           role="grid" aria-describedby="dynamic-table_info">
                                        <thead style="font-weight: bold;">
                                        <tr role="row">
                                            <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                                colspan="1" style="color: #707070;"
                                                aria-label="Domain: activate to sort column ascending">
                                                Réference
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                                colspan="1"
                                                aria-label="Domain: activate to sort column ascending">
                                                Client
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                                colspan="1"
                                                aria-label="Domain: activate to sort column ascending">
                                                BC Client
                                            </th>
                                            <th class="sorting_desc" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1" colspan="1"
                                                aria-label="Price: activate to sort column ascending"
                                                aria-sort="descending">
                                                Consultant
                                            </th>
                                            <th class="sorting_desc" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1" colspan="1"
                                                aria-label="Price: activate to sort column ascending"
                                                aria-sort="descending">
                                                Fournisseur
                                            </th>


                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                Vente
                                            </th>
                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                Achat
                                            </th>
                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                Type
                                            </th>
                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                Devise
                                            </th>


                                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label=""></th>

                                        </tr>
                                        </thead>

                                        <tbody>
                                        {% for mission in missions %}

                                            <tr role="row" class="odd">
                                                <td>


                                                    #M_{{ mission.id }}


                                                </td>


                                                <td>
                                                    {% if mission.client is null %}
                                                        --

                                                    {% else %}

                                                        {{ mission.client.nom }}


                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if mission.bcclients | length == 0 %}
                                                        --

                                                    {% else %}
                                                        {{ mission.bcclients | join(', ') }}

                                                    {% endif %}
                                                </td>
                                                <td>

                                                    {% if mission.consultant is null %}
                                                        --

                                                    {% else %}

                                                        {{ mission.consultant }}


                                                    {% endif %}


                                                </td>


                                                <td>
                                                    {% if mission.fournisseur is null %}
                                                        --

                                                    {% else %}

                                                        {{ mission.fournisseur }}


                                                    {% endif %}

                                                </td>

                                                <td class="hidden-480">
                                                    {% if mission.prixVente is null %}
                                                        --
                                                    {% else %}
                                                        {{ mission.prixVente }}

                                                    {% endif %}


                                                </td>
                                                <td class="hidden-480">
                                                    {% if mission.prixAchat is null %}
                                                        --
                                                    {% else %}
                                                        {{ mission.prixAchat }}

                                                    {% endif %}


                                                </td>
                                                <td>
                                                    {% if mission.type is null %}
                                                        --

                                                    {% else %}

                                                        {{ mission.type }}


                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if mission.devise is null %}
                                                        --

                                                    {% else %}

                                                        {{ mission.devise }}


                                                    {% endif %}
                                                </td>

                                                <td>
                                                    <div class="hidden-sm hidden-xs action-buttons">
                                                        <a class="blue"
                                                           href="{{ path('mission_show', { 'id': mission.id }) }}"
                                                           title="voir">
                                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                                        </a>
                                                        <a class="dark-10"
                                                           href="{{ path('mission_log', { 'id': mission.id }) }}"
                                                           title="Historique">
                                                            <i class="ace-icon fa fa-history bigger-130"></i>
                                                        </a>

                                                        <a class="orange"
                                                           href="{{ path('mission_edit', { 'id': mission.id }) }}"
                                                           title="modifier">
                                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                        </a>
                                                        <a class="success"
                                                           href="{{ path('facture_mission', { 'id': mission.id }) }}"
                                                           title="ajouter une facture ">
                                                            <i class="ace-icon fa fa-money bigger-130"></i>
                                                        </a>
                                                        {% if mission.contratCName is not null %}
                                                            <a class="purple"
                                                               href="{{ asset('') }}/uploads/documents/{{ mission.contratCName }}"
                                                               title="Télécharger ">
                                                                <i class="ace-icon fa fa-download bigger-130"></i>
                                                            </a>
                                                        {% else %}
                                                            <a href="{{ path('mission_upload', { 'id': mission.id }) }}" role="button"
                                                               class="red2"
                                                               title="uploader un document">
                                                                <i class="ace-icon fa fa-upload bigger-130"></i>
                                                            </a>
                                                        {% endif %}

                                                        <a href="#my-moda{{ mission.id }}" role="button"
                                                           class="dark"
                                                           data-toggle="modal">
                                                            <i class="ace-icon fa fa-close bigger-130"></i>
                                                        </a>
                                                        <div id="my-moda{{ mission.id }}" class="modal modal-test fade"
                                                             style="display: none" tabindex="-1">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close"
                                                                                data-dismiss="modal"
                                                                                aria-hidden="true">&times;
                                                                        </button>

                                                                    </div>

                                                                    <div class="modal-body">


                                                                        <input type="hidden"
                                                                               id="id_val{{ mission.id }}"
                                                                               value="{{ mission.id }}"
                                                                               class="form-control">
                                                                        <input type="text"
                                                                               id="dateFin{{ mission.id }}"
                                                                               placeholder="Date Fin"
                                                                               class="form-control date-timepicker1">

                                                                    </div>

                                                                    <div class="modal-footer">
                                                                        <button class="btn btn-sm btn-success ok pull-right"
                                                                                id="{{ mission.id }}">
                                                                            <i class="ace-icon fa fa-check"></i>
                                                                            OK
                                                                        </button>

                                                                    </div>
                                                                </div><!-- /.modal-content -->
                                                            </div><!-- /.modal-dialog -->
                                                        </div>
                                                        {% if is_granted('ROLE_ADMIN') %}
                                                            <a class="red"
                                                               href="{{ path('mission_remove', { 'id': mission.id }) }}"
                                                               onclick="return confirm('vous êtes sûr que vous voulez le supprimé?');">
                                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                            </a>
                                                        {% endif %}
                                                    </div>

                                                    <div class="hidden-md hidden-lg">
                                                        <div class="inline pos-rel">
                                                            <button class="btn btn-minier btn-yellow dropdown-toggle"
                                                                    data-toggle="dropdown"
                                                                    data-position="auto">
                                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                            </button>

                                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                                <li>
                                                                    <a href="#" class="tooltip-info" data-rel="tooltip"
                                                                       title=""
                                                                       data-original-title="View">
                                                    <span class="blue">
                                                        <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                    </span>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a href="#" class="tooltip-success"
                                                                       data-rel="tooltip" title=""
                                                                       data-original-title="Edit">
																				<span class="green">
																					<i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
																				</span>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a href="#" class="tooltip-error"
                                                                       data-rel="tooltip"
                                                                       title=""
                                                                       data-original-title="Delete">
																				<span class="red">
																					<i class="ace-icon fa fa-trash-o bigger-120"></i>
																				</span>
                                                                    </a>
                                                                </li>

                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>


                    </div>


                </div>
            </div>
        </div>
    </div>

{% endblock %}
